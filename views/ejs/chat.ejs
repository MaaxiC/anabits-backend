<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-3 mb-5" style="background-color:cornflowerblue; width:500px;" >
        <h1 style="color:blue;" class="text-center">Center of messages</h1>
        <br>
        <form id="chatForm">
            <hr/>
            <div id='chat'></div>
            <hr/>
            <div class="form-floating mb-3">
                <input id="email" class="form-control" type="text" name="email" placeholder="Email" required>
                <label for="email">Email</label>
            </div>
            <div class="form-floating mb-3">
                <input id="message" class="form-control" type="text" name="message" placeholder="Message">
                <label for="message">Message</label>
            </div>
            <div class="d-grid">
                <button class="btn btn-primary mt-3" id="sendMessage">Send</button>
            </div>
        </form>
    </div>
</div>