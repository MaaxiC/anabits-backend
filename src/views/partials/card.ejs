<% if(products.length > 0){ %>
    <%for (let product of products) {%>
        <div class="card m-3" style="width: 18rem; background-color:coral">
            <img src="<%=product.foto%>" class="card-img-top">
            <div class="card-body">
                <h3 class="card-title"><%=product.nombre%></h3>
                <p class="card-text"><%=product.descripcion%></p>
                <h5 class="card-text">US$<%=product.precio%></h5>
                <div class="d-grid">
                    <a href="#" class="btn btn-primary m-3 "><i class="bi bi-cart2"></i> Add to Cart</a>
                </div>
                <div class="d-flex justify-content-center m-1">
                    <a href="#" class="btn btn-warning me-2 px-3"><i class="bi bi-arrow-clockwise"></i> Update</a>
                    <a href="#" class="btn btn-danger ms-2 px-3"><i class="bi bi-trash"></i> Delete</a>
                </div>
            </div>
        </div>
    <%}%>
<% } else{ %>
    <h3 class="alert alert-danger">No data found</h3>
<% } %>
            

